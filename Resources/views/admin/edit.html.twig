{% form_theme edit_form 'AppBundle:snippets:form_fields.html.twig' %}

<div id="admin" class="module">
    <h1>{{ (entity_path ~ '.edit')|translate }}</h1>

    {{ form(edit_form) }}

    <ul class="record_actions">
        <li>
            <a href="{{ path(index_route) }}">{{ (entity_path ~ '.list')|translate }}</a>
        </li>
    </ul>

    <div style="float:right">
        {{ form(delete_form) }}
    </div>

    {% for association in entity.associations %}
        {{ include('AppBundle:assets:OneToMany.js.twig', { 'bundle' : bundle_name|lower, 'one' : entity_name, 'many' : association.targetEntity|split('\\')|last|lower, 'manys' : association.fieldName}) }}
    {% endfor %}
</div>
