#document .document_imagen {
    float: right;
    margin: 10px;
}

#document {
    overflow: hidden;
    margin: 15px auto;
    max-width: 800px;
    padding: 15px;
}

#document_title > h1 {
    text-align: center;
}

#document h1 {
    font-size: 20px;
}

#document_details {

}
#edemy_documentbundle_documenttype label {
    width: 0px;
    float: none;
}

@media screen and (min-width: 700px) {
    #blog {
        margin: 10px auto !important;
        max-width: 800px;
    }

    #blog .document {
        margin: 15px;
        padding: 15px;
        overflow: auto;
    }

    #blog .document .document_imagen {
        float: right;
        margin: 10px;
    }

    #document {
        min-height: 350px;
        max-width: 700px;
        padding: 1em;
    }

    #document .document_imagen {
        float: right;
        width: 50%;
        margin-right: 10px;
    }

    #document .document_imagen img {
        width: 300px;
    }

    #document .document_details {
        float: left;
        width: 45%;
    }

    #document .document_details .document_name {
        text-align: center;
    }

    #document .document_details .document_description {
    }

    #document .document_details ul li {
        list-style-type: disc;
    }

    .document_info {
        float: left;
        max-width: 97%;
        margin-top: 40px;
        margin-left: 5px;
        margin-right: 5px;
    }
}

@media screen and (max-width: 699px) {
    #blog {
        {#margin: 10px !important;#}
        max-width: 800px;
    }

    #blog .document {
        margin: 10px !important;
        padding: 15px;
        overflow: auto;
    }

    #blog .document .document_imagen {
        float: right;
        margin: 10px;
    }

    #document {
        min-height: 350px;
        max-width: 700px;
        padding: 1em;
        margin: 15px;
    }

    #document .document_imagen {
        width: 90%;
        margin-right: 10px;
    }

    #document .document_imagen > img {
        width: 300px;
    }

    #document .document_details {
        width: 90%;
    }

    #document .document_details .document_name {
        text-align: center;
    }

    #document .document_details .document_description {
    }

    #document .document_details ul li {
        list-style-type: disc;
    }

    .document_info {
        float: left;
        max-width: 97%;
        margin-left: 5px;
        margin-right: 5px;
    }

    .document_info h1 {
        margin-bottom: 5px;
        margin-top: 0px;
    }

    .document_info h3 {
        margin-top: 0px;
        margin-bottom: 0px;
    }
}

#related_documents {
    {#border-radius: 10px;#}
    {#border: 1px solid black;#}
    padding: 10px;
    margin: 10px auto;
    clear: both;
    position: relative;
}

#related_documents .related_document {
    border-radius: 10px;
    border: 1px solid black;
    padding: 10px;
    margin: 10px auto;
    clear: both;
    overflow: auto;
}

#related_documents .related_document h3 {
    margin: 10px 0;
}

@media screen and (min-width: 700px) {
    #related_documents .related_document .description {
        float: left;
        max-width: 70%;
    }
}

#related_documents .related_document .document_imagen {
    float: right;
}