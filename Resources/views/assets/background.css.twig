#edemy_backgroundbundle_background_imagenes > div {
    border: 1px solid black;
    padding: 15px;
    margin-bottom: 15px;
    overflow: auto;
    zoom: 1;
}

@media screen and (min-width:551px) {
    #edemy_backgroundbundle_background_imagenes > div {
        position: relative;
        min-width: 300px;
    }

    #edemy_backgroundbundle_background_imagenes img {
        position: absolute;
        top: 0px;
        right: 0px;
        height: 100%;
    }
}
