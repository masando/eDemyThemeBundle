{# CATEGORY CATALOGO #}

#catalogo_categories {
    max-width: 950px;
    text-align: center;
    margin: auto;

    padding: 10px;
    overflow: hidden;
    margin: 15px;
}

@media screen and (min-width:700px) {
    #catalogo_categories {
        margin: 15px auto;
    }
}

#catalogo_categories h2 {
    font-size: 20px;
}

#catalogo_categories .category {
    border: 1px solid #CCC;
    display: inline-block;
    width: 250px;
    height: 300px;
    padding: 1em;
    margin: 1em;
    float: left;

    border-radius: 5px;
    box-shadow: 5px 5px 5px #999;
    -webkit-box-shadow: 5px 5px 5px #999;
    -moz-box-shadow: 5px 5px 5px #999;
    filter: shadow(color=#999999, direction=135, strength=2);

    background-color: rgba(255,255,255,1);

    overflow: hidden;
}

#catalogo_categories .category_without_image {
    border: 1px solid #CCC;
    display: inline-block;
    width: 250px;
    
    padding: 0.5em;
    margin: 1em;
    float: left;

    border-radius: 5px;
    box-shadow: 5px 5px 5px #999;
    -webkit-box-shadow: 5px 5px 5px #999;
    -moz-box-shadow: 5px 5px 5px #999;
    filter: shadow(color=#999999, direction=135, strength=2);
    background-color: white;
}

#catalogo_categories .category img {
    width: 100%;
}

#catalogo_categories .category p {
    font-size: 15px;
}

{# PRODUCT CATALOGO #}

#product_catalogo {
    max-width: 950px;
    text-align: center;
    margin: auto;
    padding: 10px;
    overflow: hidden;
    margin: 15px;
}

@media screen and (min-width:700px) {
    #product_catalogo {
        margin: 15px auto;
    }
}


#product_catalogo .navigation {
    margin-top: 10px;
    clear: both;
    text-align: center;
    margin: 20px auto 10px auto;
    font-size: 30px;
}

#product_catalogo .navigation span {
    padding: 5px;
}

#product_catalogo .product {
    border: 1px solid #CCC;
    display: inline-block;
    height: 280px;
    padding: 1em;
    float: left;

    border-radius: 5px;
    box-shadow: 5px 5px 5px #999;
    -webkit-box-shadow: 5px 5px 5px #999;
    -moz-box-shadow: 5px 5px 5px #999;
    filter: shadow(color=#999999, direction=135, strength=2);
    background-color: white;
}

@media screen and (max-width: 699px) {
    #product_catalogo .product {
        width: 230px;
        margin: 1em;
    }
}

@media screen and (min-width: 700px) {
    #product_catalogo .product {
        width: 245px;
        margin: 20px;
    }
}

#product_catalogo .product img {
    max-width: 100%;
    max-height: 200px;
}

.product_search_result {
    border: 1px solid #CCC;
    display: inline-block;
    width: 250px;
    height: 300px;
    padding: 1em;
    margin: 1em;
    float: left;

    border-radius: 5px;
    box-shadow: 5px 5px 5px #999;
    -webkit-box-shadow: 5px 5px 5px #999;
    -moz-box-shadow: 5px 5px 5px #999;
    filter: shadow(color=#999999, direction=135, strength=2);

    background-color: white;
}

.product_search_result img {
    max-width: 100%;
    max-height: 200px;
}

{# PRODUCT DETAILS #}
#product {
    padding: 10px;
    overflow: hidden;
    margin: 15px auto;
}

@media screen and (min-width: 700px) and (max-width: 1500px) {
    #product {
        min-height: 350px;
        max-width: 700px;
        padding: 1em;
    }

    #product .product_imagen {
        float: left;
        width: 50%;
        margin-right: 10px;
    }

    #product .product_imagen img {
        width: 300px;
    }

    #product .product_details {
        float: left;
        width: 45%;
        margin-bottom: 40px;
    }

    #product .product_details .product_name {
        text-align: center;
    }
    #product .product_details .product_description {
    }
    #product .product_details ul li {
        list-style-type: disc;
    }
    .product_info {
        float: left;
        max-width: 97%;
        margin-top: 40px;
        margin-left: 5px;
        margin-right: 5px;
    }
}
@media screen and (min-width: 0px) and (max-width: 699px) {
    #product {
        min-height: 350px;
        max-width: 700px;
        padding: 1em;
        margin: 15px;
    }

    #product .product_imagen {
        margin: 0 auto;
        width: 90%;
        clear: both;
    }

    #product .product_imagen > img {
        width: 300px;
    }

    #product .product_details {
        padding-top: 20px;
        width: 90%;
    }

    #product .product_details .product_name {
        text-align: center;
    }
    #product .product_details .product_description {
    }
    #product .product_details ul li {
        list-style-type: disc;
    }
    .product_info {
        float: left;
        max-width: 97%;
        margin-left: 5px;
        margin-right: 5px;
    }
    .product_info h1 {
        margin-bottom: 5px;
        margin-top: 0px;
    }
    .product_info h3 {
        margin-top: 0px;
        margin-bottom: 0px;
    }
}

