{# ADMINMENU #}

#adminmenu {
    position: fixed;
    top: 0px;
    background-color: #FAA;
}
#adminmenu ul {
    text-align:center;
    width:100%;
    padding:0;
    margin:0;
    list-style-type:none;
}
#adminmenu a {
    text-decoration:none;
    padding:0.2em 0.6em;
}

#adminmenu a:hover {
    text-decoration:none;
    color:black;
}
#adminmenu li {
    display:inline;
    {% if params['#adminmenu color'] is defined -%}
        color: {{ params['#adminmenu color'] }};
    {% else %}
        color: black;
    {% endif -%}
}

{# MAINMENU #}

@media screen and (max-width: 699px) {
    #mainmenu {
        display:none;
    }
    
    .slicknav_menu {
        display:block;
    }
}

@media screen and (min-width: 700px) {
    #mainmenu {
        display:block;
    }
    .slicknav_menu {
        display:none;
    }
}
#mainmenu {
    position: relative;
    float: left;
    width: 100%;
    height: 30px;
    {#
    background-color: #E5D894;
    #}
    {% if params['#mainmenu background-color'] is defined -%}
        background-color: {{ params['#mainmenu background-color'] }};
    {% endif -%}
    {% if params['#mainmenu line'] is defined -%}
        border-bottom: {{ params['#mainmenu line'] }};
    {% endif -%}
    margin: 15px 0 0;
    {#
    border: 1px solid blue;
    #}
    font-size: large;
    font-family: 'Roboto Condensed', sans-serif;
    font-weight: 200;
}

#mainmenu ul {
    position: relative;
    float: left;
    left: 50%;
    list-style: none;
    padding: 0;
    margin: 3px;
    min-width: 10em;
    {#
    border: 1px solid pink;
    #}
}
#mainmenu ul li {
    position: relative;
    float: left;
    right: 50%;
    {% if params['#mainmenu line'] is defined -%}
        border-bottom: 1px solid white !important;
        outline-bottom: 1px solid white !important;
        border-top: {{ params['#mainmenu line'] }};
        border-left: {{ params['#mainmenu line'] }};
        border-right: {{ params['#mainmenu line'] }};
    {% endif -%}
    margin: 2px;
    text-transform: uppercase;
    font-size: 15px;
    {% if params['#mainmenu color'] is defined -%}
        color: {{ params['#mainmenu color'] }};
    {% else %}
        color: black;
    {% endif -%}
}
#mainmenu ul li a {
    display: block;
    margin:0 0 0 1px;
    padding:3px 10px;
    {% if params['#mainmenu color'] is defined -%}
        color: {{ params['#mainmenu color'] }};
    {% else %}
        color: black;
    {% endif -%}
}
#mainmenu ul li span {
    display: block;
    line-height: 1em;
    {% if params['#mainmenu font-family'] is defined -%}
        font-family: '{{ params['#mainmenu font-family'] }}';
    {% else %}
        font-family: 'Roboto Condensed', sans-serif;
    {% endif -%}
    font-size: 15px;
    font-weight: 400;
}
#mainmenu ul li > span {
    margin-top: 3px;
}
#mainmenu li ul {
    position: absolute;
    left: 0;
    min-width: 10em;
    box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.2);
    background-color: #7E8B53;
    background-image: none;
    background-repeat: repeat;
    background-attachment: scroll;
    background-position: 0% 0%;
    background-clip: border-box;
    background-origin: padding-box;
    background-size: auto auto;
    z-index: 1000 !important;
}
#mainmenu li ul li {
    right: 0;
    white-space: nowrap;
}
#mainmenu ul li ul li a {
    color: white;
}
 

@media screen and (max-width: 699px) {
    #footermenu {
        {% if params['#footermenu color'] is defined -%}
            color: {{ params['#footermenu color'] }};
        {% endif -%}
        margin: 0 auto;
        padding: 10px;
        width: 100%;
    }

    #footermenu > ul {
        padding: 0;
    }

    #footermenu > ul > li {
        display: block;
        float: left;
        margin: 10px 5px;
        width: 42%;
    }

    #footermenu > ul > li > span {
        width: 150px;
        {# font-weight: bold; #}
        text-transform: uppercase;
    }

    #footermenu ul.menu_level_1 {
        margin: 0;
        padding: 0;
    }

}

@media screen and (min-width: 700px) {
    #footermenu {
        {# width: 1000px; #}
        margin: 30px auto;

        {% if params['#footermenu color'] is defined -%}
            color: {{ params['#footermenu color'] }};
        {% endif -%}

        {% if params['#footermenu font-family'] is defined -%}
            font-family: '{{ params['#footermenu font-family'] }}';
        {% endif -%}

        {% if params['#footermenu font-size'] is defined -%}
            font-size: {{ params['#footermenu font-size'] }};
        {% endif -%}
    }

    #footermenu > ul {
        overflow: hidden;
        padding: 0;
        margin: 0;
    }

    #footermenu > ul > li {
        display: block;
        float: left;
        margin: 0 30px;
    }

    #footermenu > ul > li > span {
        text-transform: uppercase;

        {% if params['#footermenu font-weight'] is defined -%}
            font-weight: {{ params['#footermenu font-weight'] }};
        {% endif %}
    }

    #footermenu ul.menu_level_1 {
        margin: 0;
        padding: 0;
    }
    
    #footermenu ul li ul li {
        margin-top: 10px;
    }
}


#footermenu a, #footermenu a:hover, #footermenu a:visited {
    text-decoration: none;
    color: inherit;
}