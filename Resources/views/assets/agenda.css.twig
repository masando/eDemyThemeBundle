{# AGENDA ACTIVIDADES #}

#agenda_actividades {
    max-width: 950px;
    text-align: center;
    margin: auto;
    overflow: hidden;
}

#agenda_actividades .actividad {
    border: 1px solid #CCC;
    display: inline-block;
    width: 250px;
    height: 330px;
    padding: 1em;
    margin: 1em;
    float: left;

    box-shadow: 5px 5px 5px #999;
    -webkit-box-shadow: 5px 5px 5px #999;
    -moz-box-shadow: 5px 5px 5px #999;
    filter: shadow(color=#999999, direction=135, strength=2);
    background-color: white;
}

#agenda_actividades .actividad h2 {
    margin-top: 0;
}

#agenda_actividades .actividad a {
    //border-bottom: 1px solid black;
    color: green;
}

#agenda_actividades .horarios {
    float: left;
}

#agenda_actividades .imagenes {
    float: right;
}

#agenda_actividades .imagenes img {
    width: 250px;
}

#agenda_actividad_details {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
    overflow: hidden;
}
#agenda_actividad_details h2 {
    font-size: 20px;
}

#agenda_actividad_details .horarios {
    float: left;
}
#agenda_actividad_details .imagenes {
    float: right;
    margin-bottom: 10px;
}
#agenda_actividad_details .imagenes img {
    width: 100%;
}
