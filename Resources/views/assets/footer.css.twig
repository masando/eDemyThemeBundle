#footer {
    {% if params['#footer background_color'] is defined -%}
        background-color: {{ params['#footer background-color'] }};
    {% else %}
        background-color: rgba(100,100,100,0.7);
    {% endif %}
    min-height: 100px;
    {#border-top: 1px solid rgb(178,178,178);#}
    position: relative;
    bottom: 0;
    {#opacity: 0.7;#}
    width: 100%;
    overflow: hidden;
}

#footer .footermodule {
    padding: 1em;
    color: white;
}

#footer .footermodule h3 {
    font-size: large;
    color: white;
}

#footer .footermodule a {
    text-decoration: none;
    font-size: normal;
    color: white;
}

