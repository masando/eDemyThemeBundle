#cart_tray {
    position: absolute;
    top: 5px;
    right: 5px;
    {#- font-weight: 400; #}

}
@media screen and (max-width: 500px) {
    #cart_tray {
        position: absolute;
        top: 5px;
        right: 5px;
    }
}
#cart_tray a {
    text-decoration: none;
    padding: 0.2em 0.6em;
    {% if param['add_to_cart_color'] is defined %}
    color: {{ param['add_to_cart_color'] }};
    {% else %}
    color: rgb(43, 166, 203);
    {% endif %}
}
#cart_tray a:hover {
    text-decoration: none;
    {% if param['add_to_cart_color'] is defined %}
    color: {{ param['add_to_cart_color'] }};
    {% else %}
    color: rgb(43, 166, 203);
    {% endif %}
}

