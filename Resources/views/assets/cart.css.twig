#cart_form {
    width: 50%;
    margin: 30px auto 20px auto;
}
#discount {
    margin: 0 auto;
    width: 30%;
    min-width: 150px;
}
#discount input {
    width: 100%;
    height: 30px;
}
#discount button {
    width: 100%;
    {% if param['add_to_cart_color'] is defined %}
    background: none repeat scroll 0% 0% {{ param['add_to_cart_color'] }};
    {% else %}
    background: none repeat scroll 0% 0% rgb(43, 166, 203);
    {% endif %}
    border: 1px solid rgb(30, 114, 140);
    box-shadow: 0px 1px 0px rgba(255, 255, 255, 0.5) inset;
    color: rgb(255, 255, 255);
    cursor: pointer;
    font-family: inherit;
    font-size: 15px;
    font-weight: bold;
    line-height: 1;
    outline: medium none;
    padding: 5px 5px 5px 5px;
    text-align: center;
    text-decoration: none;
    transition: background-color 0.15s ease-in-out 0s;
}
#cart_button_checkout {
    width: 100%;
    min-width: 200px;
    {% if param['add_to_cart_color'] is defined %}
    background: none repeat scroll 0% 0% {{ param['add_to_cart_color'] }};
    {% else %}
    background: none repeat scroll 0% 0% rgb(43, 166, 203);
    {% endif %}
    border: 1px solid rgb(30, 114, 140);
    box-shadow: 0px 1px 0px rgba(255, 255, 255, 0.5) inset;
    color: rgb(255, 255, 255);
    cursor: pointer;
    font-family: inherit;
    font-size: 30px;
    font-weight: bold;
    line-height: 1;
    outline: medium none;
    padding: 10px 25px 10px 25px;
    text-align: center;
    text-decoration: none;
    transition: background-color 0.15s ease-in-out 0s;
}
