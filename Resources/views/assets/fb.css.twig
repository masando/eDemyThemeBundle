#promo {
    margin: 20px auto;
    padding: 20px;
    background-color: white;
    width: 800px;
    border-radius: 10px;
}
#promo a {
    font-size: 20px;
    text-align: center;
    display: block;
}

@media screen and (min-width: 700px) {
    #likes {
        position: absolute;
        top: 0;
        right: 0;
        padding: 20px;
        font-size: 15px;
        font-family: "Roboto";
    }
}

@media screen and (max-width: 699px) {
    #likes {
        margin: 0 auto;
        width: 95%;
        text-align: center;
    }
}

.fbPrecontent {
    margin:10px auto;
    text-align: center;
    max-width: 700px;
    padding: 15px;
}

@media screen and (max-width: 699px) {
    .fbPrecontent {
        margin:10px !important;
    }
}

@media screen and (max-width: 699px) {
    #instagram {
        max-width: 100%;
        margin: 15px;
    }
    #instafeed img {
        width: 100%;
    }
}

@media screen and (min-width: 700px) {
    #instagram {
        max-width: 800px;
        margin: 10px auto;
    }
    #instafeed {
        text-align: center;
        padding: 10px;
    }
    #instafeed img {
        width: 23%;
        margin: 7px;
    }
}