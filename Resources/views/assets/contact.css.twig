@media screen and (min-width: 700px) {
    #contactform {
        width: 60%;
        margin: 40px auto 40px auto;
        padding: 20px;
    }
}

@media screen and (min-width: 0px) and (max-width: 699px) {
    #contactform {
        width: 90%;
        margin: 40px auto 40px auto;
    }
}

#contactform input {
    {#width: 100%;#}
    height: 30px;
}
#contactform textarea {
    {#width: 100%;#}
}
#contactform button {
    margin: 20px 0 20px 0;
    width: 100%;
    {% if param['add_to_cart_color'] is defined %}
        background-color: {{ param['add_to_cart_color'] }};
    {% else %}
        background-color: rgb(80%, 80%, 80%);
    {% endif %}
    text-align: center;
    color: white;
    font-weight: bold;
    padding-top: 4px;
    padding-bottom: 4px;
    font-size: 30px;
}
#contactform label {
    font-size: 30px;
    margin: 10px 0 5px 0;
}
