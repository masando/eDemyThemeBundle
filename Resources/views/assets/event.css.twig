#event {
    max-width: 700px;
    margin: 0 auto;
    padding: 15px;
}
.event_details {
    margin: 0 auto;
    text-align: center;
    width: 700px;
    padding: 15px;
}
.event_details img {
    width: 100%;
}
.old_event_details {
    border: 1px solid;
    margin: 0 auto;
    text-align: center;
    
    box-shadow: 10px 10px 15px #999;
    -webkit-box-shadow: 2px 2px 5px #999;
    -moz-box-shadow: 2px 2px 5px #999;
    filter: shadow(color=#999999, direction=135, strength=2);
}
.old_event_details img {
    width: 100%;
}

.precontent_event {
    margin: 5px auto;
    text-align: center;
}
