{% if login_url is defined %}
    <div id="promo">
        <a href="{{ login_url }}">Participar en la Promoción de Namasté</a>
    </div>
{% else %}
    id: {{ id }}
    <br/>
    name: {{ name }}
    <br/>
    first_name: {{ first_name }}
    <br/>
    last_name: {{ last_name }}
    <br/>
    middle_name: {{ middle_name }}
    <br/>
    link: {{ link }}
    <br/>
    birthday: {{ birthday }}
    <br/>
    location: {{ location }}
    <br/>
    email: {{ email }}
    <br/>
    gender: {{ gender }}
